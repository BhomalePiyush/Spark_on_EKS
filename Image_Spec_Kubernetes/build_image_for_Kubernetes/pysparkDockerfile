ARG base_img

FROM $base_img
WORKDIR /

# Reset to root to run installation tasks
USER 0

RUN mkdir ${SPARK_HOME}/python
# TODO: Investigate running both pip and pip3 via virtualenvs
# RUN apt-get -y update && \
#     #apt install -y python python-pip && \
#     apt install -y python3 python3-pip
#     # We remove ensurepip since it adds no functionality since pip is
#     # installed on the image and it just takes up 1.6MB on the image
#     #rm -r /usr/lib/python*/ensurepip && \
#     #pip3 install --upgrade pip setuptools --break-system-packages && \
#     # You may install with python3 packages by using pip3.6
#     # Removed the .cache to save space
#     #rm -r /root/.cache && rm -rf /var/cache/apt/*

#install build dependencies
RUN apt update && apt install -y \
    wget build-essential libssl-dev zlib1g-dev libbz2-dev \
    libreadline-dev libsqlite3-dev libncursesw5-dev libffi-dev \
    liblzma-dev xz-utils tk-dev

# installing python from source
RUN wget https://www.python.org/ftp/python/3.12.3/Python-3.12.3.tgz && \
    tar -xvf Python-3.12.3.tgz && \
    cd Python-3.12.3 && \
    .configure --enable-optimizations && \
    make -j$(nproc) && \
    make altinstall

# creating symlinks for python3 and pip3
RUN ln -s /usr/local/bin/python3.12 /usr/bin/python3 && \
    ln -s /usr/local/bin/pip3.12 /usr/bin/pip3

# Ensuring pip is available and upgrade it
RUN python3 -m ensurepip && \
    python3 -m pip install --upgrade pip setuptools

RUN pip3 install pyspark==3.5.1

COPY python/pyspark ${SPARK_HOME}/python/pyspark
COPY python/lib ${SPARK_HOME}/python/lib

WORKDIR /opt/spark/work-dir
ENTRYPOINT [ "/opt/entrypoint.sh" ]

# Specify the User that the actual main process will run as
ARG spark_uid=185
USER ${spark_uid}
